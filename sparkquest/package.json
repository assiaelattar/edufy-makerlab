{
  "name": "sparkquest",
  "private": true,
  "version": "1.0.0",
  "author": "MakerLab",
  "description": "SparkQuest Studio - Educational Gamification Platform",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build --debug",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.makerlab.sparkquest",
    "publish": [
      {
        "provider": "github",
        "owner": "assiaelattar",
        "repo": "edufy-makerlab"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ]
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@types/papaparse": "^5.5.2",
    "@vitejs/plugin-react": "^5.0.0",
    "date-fns": "^4.1.0",
    "firebase": "^12.6.0",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.561.0",
    "papaparse": "^5.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-youtube": "^10.1.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.6.2",
    "firebase-admin": "^13.6.0"
  },
  "overrides": {
    "node-gyp": "11.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}